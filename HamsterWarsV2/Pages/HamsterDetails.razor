@page "/HamsterDetails/{HamsterId:int}"
@inherits HamsterDetailsBase

@if (hamster == null && ErrorMessage == null)
{
    <h3>Loading product details..</h3>
}
else if(ErrorMessage != null)
{
    <h3 class="text-danger">@ErrorMessage</h3>
}
else{

    Hamster h = hamster;
    <div class="container" style="text-align: center;">
        <div class="card col-5 row-5 rounded">
         <h3><b>@h.HamsterName</b></h3>
         <img class="row-5 col-10 w"  src="/Content/Images/@h.ImgName">
         <h5><b>Name:</b> @h.HamsterName</h5>
         <h5><b>Age:</b> @h.HamsterAge</h5>
         <h5><b>Favorite food:</b> @h.FavFood</h5> 
         <h5><b>Loves:</b> @h.Loves</h5> 
         <h5><b>Wins:</b> @h.Wins</h5> 
         <h5><b>Losses:</b> @h.Losses</h5> 
         <h5><b>Games:</b> @h.Games</h5> 
         <a href="Hamsters"> Go back</a>
        </div>
        </div>
}
}